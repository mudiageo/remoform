{
	"name": "remoform",
	"version": "0.1.0",
	"description": "The powerful form library for SvelteKit built on remote functions",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"lint": "eslint .",
		"format": "prettier --write ."
	},
    "publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.42.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@standard-schema/spec": "^1.0.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@vitest/browser": "^3.2.3",
		"playwright": "^1.53.0",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"valibot": "^1.1.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0",
		"zod": "^4.1.11"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"forms",
		"remote-functions",
		"validation",
		"typescript",
		"accessibility",
		"a11y",
		"progressive-enhancement"
	],
	"engines": {
		"pnpm": ">=8.7.0",
		"node": ">=18"
	},
	"license": "MIT",
	"author": {
		"name": "Mudia Geo",
		"url": "https://github.com/mudiageo"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mudiageo/remoform.git",
		"directory": "packages/remoform"
	},
	"homepage": "https://github.com/mudiageo/remoform#readme",
	"bugs": {
		"url": "https://github.com/mudiageo/remoform/issues"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}