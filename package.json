{
	"name": "root",
	"version": "0.1.0",
	"description": "Monorepo for Remoform",
	"private": true,
	"type": "module",
	"main": "index.js",
	"scripts": {
		"build": "pnpm -r build",
		"build:packages": "pnpm -F \"./packages/**\" --parallel build",
		"build:content": "pnpm -F \"./docs/**\" --parallel build:content",
		"dev": "pnpm -F \"./packages/**\" svelte-kit sync && pnpm -r --parallel --reporter append-only --color dev",
		"docs:dev": "pnpm --filter docs dev",
		"docs:build": "pnpm --filter docs build",
		"docs:preview": "pnpm --filter docs preview",
		"check": "pnpm build:packages && pnpm -r check",
		"check:watch": "pnpm -r check:watch",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"format:check": "prettier --check .",
		"test": "pnpm -r test",
		"test:unit": "pnpm -r test:unit",
		"test:package": "pnpm -F \"./packages/**\" test",
		"test:package:watch": "pnpm -F \"./packages/**\" test:watch",
		"format": "prettier --write .",
		"sync": "pnpm -r sync",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm build && changeset publish",
		"ci:publish": "pnpm build:packages && changeset publish"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.42.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.10",
		"@eslint/js": "^9.12.0",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@typescript-eslint/scope-manager": "^8.10.0",
		"@typescript-eslint/utils": "^8.10.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^5.11.0",
		"svelte-eslint-parser": "^0.43.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.10.0",
		"wrangler": "^3.91.0"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"forms",
		"remote-functions",
		"validation",
		"typescript",
		"accessibility",
		"a11y",
		"progressive-enhancement"
	],
	"license": "MIT",
	"author": {
		"name": "Mudia Geo",
		"url": "https://github.com/mudiageo"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mudiageo/remoform.git"
	},
	"homepage": "https://github.com/mudiageo/remoform#readme",
	"bugs": {
		"url": "https://github.com/mudiageo/remoform/issues"
	}
}